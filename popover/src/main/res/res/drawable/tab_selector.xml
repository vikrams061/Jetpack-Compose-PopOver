<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/theme_tab_layout_selected_bg" />
                    <corners android:radius="6.93dp" />
                </shape>
            </item>
            <item android:state_selected="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/theme_tab_layout_unselected_bg" />
                    <corners android:radius="6.93dp" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>