<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">


    <androidx.cardview.widget.CardView
        android:id="@+id/img_user_avater"
        android:layout_width="@dimen/_50adp"
        android:layout_height="@dimen/_50adp"
        android:layout_marginVertical="@dimen/_8dp"
        android:layout_marginStart="@dimen/_16dp"
        android:background="@color/shimmer_background"
        app:cardBackgroundColor="@color/shimmer_background"
        app:cardCornerRadius="@dimen/_25adp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/person_name"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_12sp"
        android:layout_marginEnd="@dimen/_24dp"
        android:background="@color/shimmer_background"
        android:gravity="center|start"
        app:layout_constraintBottom_toTopOf="@id/person_username"
        app:layout_constraintEnd_toStartOf="@id/clear"
        app:layout_constraintStart_toEndOf="@id/img_user_avater"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/person_username"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginEnd="@dimen/_24dp"
        android:layout_marginBottom="@dimen/_12dp"
        android:background="@color/shimmer_background"
        android:gravity="center|start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/clear"
        app:layout_constraintStart_toEndOf="@id/img_user_avater"
        app:layout_constraintTop_toBottomOf="@id/person_name" />

    <androidx.cardview.widget.CardView
        android:id="@+id/clear"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:gravity="center"
        app:cardBackgroundColor="@color/shimmer_background"
        app:cardCornerRadius="@dimen/_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>