<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:minWidth="220dp"
    android:minHeight="50dp"
    android:orientation="vertical"
    tools:background="@color/black">

    <ImageView
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="end"
        android:layout_marginEnd="41dp"
        android:contentDescription="@string/content_description"
        android:rotation="0"
        android:src="@drawable/triangle_shape" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bordered_bg_16dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btn_alphabetical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_weight="1"
                android:gravity="end|center"
                android:text="@string/alphabetical"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_marginEnd="@dimen/_18dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_a_to_z" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/neutral_gray_50" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btn_featured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_weight="1"
                android:gravity="end|center"
                android:text="@string/featured"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_marginEnd="@dimen/_18dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_featured" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/neutral_gray_50" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btn_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_weight="1"
                android:gravity="end|center"
                android:text="@string/recently_added"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_marginEnd="@dimen/_18dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_recent" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>